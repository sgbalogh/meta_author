<h3>Deposit Geospatial Data</h3>

<% if !@dataset.errors.empty? %>
    <div class = "alert alert-error">

      <ul>
        <% @dataset.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>

    </div>
<% end %>

<div class = "well">
  <%= form_for @dataset, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :attachment %>
      <%= f.file_field :attachment, class: "btn btn-default btn-file" %>
      <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>